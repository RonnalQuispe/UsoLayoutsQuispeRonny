<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsoLayoutsQuispeRonny.AbsoluteLayout"
             Title="Absolute Layout">
    <AbsoluteLayout>
        
        <Label Text="⭐"
               FontSize="40"
               AbsoluteLayout.LayoutBounds="0.5,0,50,50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        
        <Button Text="Ir a GridLayout"
                AbsoluteLayout.LayoutBounds="1,1,150,50"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnGoToGridLayoutClicked" />

        
        <Button Text="Regresar"
                AbsoluteLayout.LayoutBounds="0,0,100,40"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnBackButtonClicked" />
    </AbsoluteLayout>
</ContentPage>
