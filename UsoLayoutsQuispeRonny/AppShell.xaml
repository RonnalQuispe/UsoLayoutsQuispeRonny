<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UsoLayoutsQuispeRonny.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UsoLayoutsQuispeRonny"
    Shell.FlyoutBehavior="Disabled"
    Title="UsoLayoutsQuispeRonny">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:GridLayout}"
        Route="GridLayout" />

    <ShellContent
        Title="StackLayout"
        ContentTemplate="{DataTemplate local:StackLayout}"
        Route="StackLayout" />

    <ShellContent
        Title="FlexLayout"
        ContentTemplate="{DataTemplate local:FlexLayout}"
        Route="FlexLayout" />

    <ShellContent
        Title="AbsoluteLayout"
        ContentTemplate="{DataTemplate local:AbsoluteLayout}"
        Route="AbsoluteLayout" />

</Shell>
